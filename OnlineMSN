<script>
// --- ⬇️ นี่คือสคริปต์ที่เขียนขึ้นมาใหม่ทั้งหมด ⬇️ ---

/* === ตั้งค่า === */
const MIN_USERS = 504084;
const MAX_USERS = 950602;
const UPDATE_INTERVAL = 3000;   // เวลาในการสุ่มเลขใหม่ (ms)
const ANIMATION_DURATION = 2940; // ระยะเวลาที่ใช้ในการเคลื่อนไหวของตัวเลข (ms)

/* === ฟังก์ชันหลัก === */
const counterEl = document.getElementById('onlineCounter');

// กำหนดให้ตัวแปรเก็บค่าปัจจุบันเป็น "จำนวนเต็ม" เสมอ
let currentUsers = Math.floor((MIN_USERS + MAX_USERS) / 2);
let isAnimating = false; // ตัวแปรป้องกัน animation ซ้อนกัน

function animateCounter(targetValue) {
    if (isAnimating) return;
    isAnimating = true;

    const startValue = currentUsers;
    const range = targetValue - startValue;
    const frameDuration = 20; // อัปเดตทุก 20ms เพื่อความลื่นไหล
    const totalFrames = Math.ceil(ANIMATION_DURATION / frameDuration);
    let currentFrame = 0;

    const timer = setInterval(() => {
        currentFrame++;
        const progress = currentFrame / totalFrames;
        
        // **หัวใจของการแก้ไข**: คำนวณค่าจาก "จุดเริ่มต้น" และ "ความคืบหน้า"
        // ไม่มีการบวกค่าทศนิยมสะสม ทำให้ไม่มีข้อผิดพลาด
        const calculatedValue = startValue + (range * progress);

        // **จุดสำคัญ**: ปัดเศษเป็นจำนวนเต็ม "ทุกครั้ง" ก่อนแสดงผล
        const displayValue = Math.round(calculatedValue);
        counterEl.textContent = displayValue.toLocaleString();

        if (currentFrame >= totalFrames) {
            clearInterval(timer);
            // เมื่อจบ animation ให้ใช้ค่าเป้าหมายที่แน่นอนและเป็นจำนวนเต็ม
            currentUsers = targetValue;
            counterEl.textContent = currentUsers.toLocaleString();
            isAnimating = false;
        }
    }, frameDuration);
}

function updateOnlineCounter() {
    // สุ่มค่าที่จะเปลี่ยนแปลง
    const randomChange = Math.floor(Math.random() * 15 - 9; // สุ่มค่าระหว่าง -15ถึง +9
    let newTarget = currentUsers + randomChange;

    // ตรวจสอบไม่ให้ค่าเกินช่วงที่กำหนด
    newTarget = Math.max(MIN_USERS, Math.min(MAX_USERS, newTarget));
    
    // ทำให้แน่ใจว่าค่าเป้าหมายเป็นจำนวนเต็ม
    newTarget = Math.floor(newTarget);

    if (newTarget !== currentUsers) {
        animateCounter(newTarget);
    }
}

// เริ่มการทำงาน
counterEl.textContent = currentUsers.toLocaleString();
setInterval(updateOnlineCounter, UPDATE_INTERVAL);

</script>
</body>
